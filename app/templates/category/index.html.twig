{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_list'|trans }}
{% endblock %}

{% block body %}
<h1>{{ 'title.category_list'|trans }}</h1>
{% if categories is defined and categories|length %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'label.id'|trans }}</th>
            <th>{{ 'label.title'|trans }}</th>
            <th>{{ 'label.created_at'|trans }}</th>
            <th>{{ 'label.updated_at'|trans }}</th>
            <th scope="col">
                {{ 'label.actions'|trans }}
            </th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.createdAt|format_date('long') }}</td>
                <td>{{ category.updatedAt|format_date('long') }}</td>
                <td>
                    <a href="{{ url('category_show', {id: category.id}) }}" title="{{ 'action.show'|trans }}">
                        {{ 'action.show'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>
        {{ 'message.empty_list'|trans }}
    </p>
{% endif %}
{% endblock %}